# Flask Configuration
FLASK_APP=app.py
FLASK_ENV=development
SECRET_KEY=your-secret-key-here-change-in-production

# Database
DATABASE_URL=sqlite:///shellsentry.db

# LLM API Configuration
LLM_API_TYPE=openai
LLM_API_KEY=
LLM_API_BASE_URL=https://api.groq.com/openai/v1
LLM_MODEL=llama-3.1-8b-instant

# SSH Configuration
SSH_USER=
SSH_PASSWORD=
SSH_KEY_PATH=~/.ssh/id_rsa
SSH_AGENT_SOCKET=

# Remote Servers (comma-separated)
REMOTE_SERVERS=

# Per-server SSH credentials (format: IP:username:password,IP:username:password)
# Example: 192.168.56.101:hero:hero,192.168.56.102:vboxuser:Dana2004
# If not specified, will use SSH_USER and SSH_PASSWORD for all servers
SERVER_CREDENTIALS=

# Security Settings
ALLOW_ROOT_EXECUTION=false
LOG_LEVEL=INFO

